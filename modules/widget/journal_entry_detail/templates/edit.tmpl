<form>
	<h3><a>{{writeString=wns.journal_entry.entry}}</a></h3>
	<div class="general_info">
		<div class="tags_in_detail"></div>
		<div class="group_fields">
			<label for="title">{{writeString=wns.journal_entry.title}}</label>
			<input type="text" name="title" class="ui-widget-content autowidth" size="75" />
		</div>
		<div class="group_fields">
			<label for="journal_id">{{writeString=wns.journal}}</label>
			<select name="journal_id" class="ui-widget-content validate-journal_id_required" data-widget-type="journal_input"></select><br /><br />
		</div>
		<div class="group_fields">
			<label for="is_published">{{writeString=wns.journal_entry.is_published}}</label>
			<input type="checkbox" name="is_published" />
		</div><br />
		<label for="text">{{writeString=wns.journal_entry.text}}</label>
		<div data-widget-type="rich_text" class="text-widget"><textarea name="text" class="ui-widget-content"></textarea></div>
	</div>
	<h3><a>{{writeString=wns.journal_entry.comments}}</a></h3>
	<div>
		<table>
			<thead>
				<tr>
					<th>{{writeString=wns.date}}</th>
					<th>{{writeString=wns.email}}</th>
					<th>{{writeString=journal.form.comment}}</th>
					<th>{{writeString=wns.journal_entry.is_published}}</th>
				</tr>
			</thead>
			<tbody class="comments ui-list ui-editable-items-list">
			</tbody>
		</table>
	</div>
	<h3><a href="#">{{writeString=wns.journal_entry.images}}</a></h3>
	<div class="droppable_area">
	</div>
</form>
